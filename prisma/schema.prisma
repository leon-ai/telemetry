generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model DailyMetric {
  id                Int      @id @default(autoincrement())
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  utterancesNb      Int
  setupsNb          Int
  onlineInstancesNb Int
  activeInstancesNb Int
  instancesNb       Int
}

model Instance {
  id                  Int         @id @default(autoincrement())
  createdAt           DateTime    @default(now())
  updatedAt           DateTime    @updatedAt
  instanceID          String      @unique
  isOnline            Boolean?
  language            String?
  environment         Json?       @default("{}")
  sttProvider         String?
  ttsProvider         String?
  coreVersion         String?
  pythonBridgeVersion String?
  tcpServerVersion    String?
  isProduction        Boolean?
  errors              Error[]
  events              Event[]
  utterances          Utterance[]
}

model Event {
  id         Int       @id @default(autoincrement())
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  instanceID String
  name       EventName
  instance   Instance  @relation(fields: [instanceID], references: [instanceID])
}

model Utterance {
  id                    Int      @id @default(autoincrement())
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  instanceID            String
  value                 String
  triggeredDomain       String
  triggeredSkill        String
  triggeredAction       String
  triggeredSkillVersion String
  triggeredSkillBridge  String
  probability           Float
  language              String
  executionTime         Float
  instance              Instance @relation(fields: [instanceID], references: [instanceID])
}

model Error {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  instanceID String
  message    String
  instance   Instance @relation(fields: [instanceID], references: [instanceID])
}

enum EventName {
  SETUP
  STARTED
  UTTERANCE
  HEARTBEAT
  STOPPED
}
